<div class="container mt-5">
  <h1 class="mb-4">Login</h1>

  <%= form_tag '/login', class: 'needs-validation', novalidate: "" do %>
    <div class="form-group mb-3">
      <%= label_tag :email, 'Email', class: 'form-label' %>
      <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'Enter your email', required: true %>
    </div>

    <div class="form-group mb-3">
      <%= label_tag :password, 'Password', class: 'form-label' %>
      <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password', required: true %>
    </div>

    <%= submit_tag "Submit", class: 'btn btn-primary' %>
  <% end %>
</div>
